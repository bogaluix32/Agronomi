
@{
    ViewBag.Title = "Tratamiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: #283618;">Tratamiento de hierba y malezas</h2>

<div class="card">
    <div class="card-header" style="color: #283618;">
        Datos registrados
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" style="background-color: #606C37; border-color: #606C37;" onclick="OpenModal(null)">Agregar</button>
            </div>
        </div>
        <hr />
        <table id="table" class="display cell-border" style="width:100%; color: #283618;">
            <thead>
                <tr>
                    <th>Terreno</th>
                    <th>Actividad</th>
                    <th>Costo Hora</th>
                    <th>Horas Asignadas</th>
                    <th>Costo de Actividad</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header text-white" style="background: #606C37;">
                <h5 class="modal-title" id="exampleModalLabel">Registro de información para tratamiento del terreno</h5>
            </div>
            <div class="modal-body">

                @*This input has the ID of the user that will be update on the BBDD*@
                <input id="txtID" type="hidden" value="0" />
                <form>
                    <div class="row">
                        <h6 class="modal-title" id="exampleModalLabel" style="color: #283618; text-align: center;">Datos del terreno</h6>
                        <div class="col">
                            <label for="txtCodigo" class="form-label" style="color: #283618;">Código del terreno</label>
                            <input type="text" class="form-control" id="txtCodigo" placeholder="T-XXX" autocomplete="off" required>
                        </div>
                        <div class="col">
                            <label for="txtActividad" class="form-label" style="color: #283618;">Actividad</label>
                            <input type="text" class="form-control" id="txtActividad" placeholder="" autocomplete="off" required>
                        </div>
                    </div>
                    <div class="row">
                        <h6 class="modal-title" id="exampleModalLabel" style="color: #283618; text-align: center;">Datos de corte de malezas</h6>
                        <div class="col">
                            <label for="txtCostoHora" class="form-label" style="color: #283618;">Costo por Hora ₡</label>
                            <input type="number" id="txtCostoHora" value="100000" required>
                        </div>
                        <div class="col">
                            <label for="txtHorasAsignadas" class="form-label" style="color: #283618;">Cantidad Horas Asignadas</label>
                            <input type="number" id="txtHorasAsignadas" value="100000" required>
                        </div>
                    </div>
                </form>
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="errorMessage" class="alert alert-danger" role="alert">
                            A simple danger alert-check it out!
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" style="background-color: #606C37; border-color: #606C37;" onclick="InsertarDatosTratamiento()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<script>

        var tableData;
        var rowSelected;

        $(document).ready(function () {
            tableData = $("#table").DataTable({

                responsive: true,
                ordering: false,
                dom: 'lfrtip',
                "ajax": {

                    url: '@Url.Action("TratamientoInfoList", "Home")',
                    type: "GET",
                    dataType: "json"
                },
                "columns": [
                    { "data": "idTerreno" },
                    { "data": "actividad" },
                    { "data": "costoHora" },
                    { "data": "horasAsignadas" },
                    { "data": "costoActividad" }

                ],
                "language": { "url": "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json" }
            });
        });

        function OpenModal(json) {

            $("#txtID").val(0);
            $("#txtCodigo").val("");
            $("#txtCostoHora").val("");
            $("#txtHorasAsignadas").val("");
            $("#txtActividad").val("");

            $("#errorMessage").hide();

            $("#FormModal").modal("show");
        }

        //Function to validate that the number is valid
        function esNumeroValido(numero) {
            return numero.trim() !== "" && !isNaN(numero.trim());
        }
        //Function to show the error message
        function mostrarError(mensaje) {
            $("#errorMessage").text(mensaje);
            $("#errorMessage").show();
        }

        function InsertarDatosTratamiento() {

            var tratamientoDatos = {

                id: $("#txtID").val(),
                idTerreno: $("#txtCodigo").val(),
                costoHora: $("#txtCostoHora").val(),
                horasAsignadas: $("#txtHorasAsignadas").val(),
                actividad: $("#txtActividad").val()
            }

            // Validar que los campos no estén vacíos y que los costos sean valores numéricos
            if (tratamientoDatos.idTerreno.trim() === "") {
                mostrarError("El campo Código del terreno es obligatorio.");
                return;
            }
            if (!esNumeroValido(tratamientoDatos.costoHora) || !esNumeroValido(tratamientoDatos.horasAsignadas)
                || !esNumeroValido(tratamientoDatos.actividad)) {
                mostrarError("Los campos de costo deben ser valores numéricos.");
                return;
            }

            jQuery.ajax({
                url: '@Url.Action("InsertarDatosTratamiento", "Home")',
                type: "POST",
                data: JSON.stringify({ objTratamiento: tratamientoDatos }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    $(".modal-body").LoadingOverlay("hide");

                    //To register the new information in the table and hide the modal
                    if (tratamientoDatos.id == 0) {

                        if (data.result != 0) {

                            tratamientoDatos.id = data.result;
                            tratamientoDatos.costoActividad = data.costo;
                            tableData.row.add(tratamientoDatos).draw(false);
                            $("#FormModal").modal("hide");
                        }
                        else {

                            $("#errorMessage").text(data.message);
                            $("#errorMessage").show();
                        }
                    }
                },
                error: function (error) {

                    $(".modal-body").LoadingOverlay("hide");
                    $("#errorMessage").text("Error Ajax");
                    $("#errorMessage").show();

                },//beforeSend allow to do something during the success case is executing
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    })
                }
            });
        }

</script>