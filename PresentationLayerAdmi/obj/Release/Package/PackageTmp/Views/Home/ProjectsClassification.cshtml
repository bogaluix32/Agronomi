
@{
    ViewBag.Title = "ProjectsClassification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
    <li class="breadcrumb-item active">Clasificaciones</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="far fa-file-archive me-1"></i> Clasificación de los proyectos registrados
    </div>
    <div class="card-body">
        <hr />
        <table id="table" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Código de proyecto</th>
                    <th>Clasificación</th>
                    <th>Área</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal to update project info-->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-white" style="background: #151240;">
                <h5 class="modal-title" id="exampleModalLabel">Clasificación de Proyectos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                @*This input has the ID of the project that will be update on the BBDD*@
                <input id="txtID" type="hidden" value="0" />

                <!-- Form to update project info-->

                <div class="row g-2">

                    <div class="col-sm-6">
                        <label for="txtProjectCode" class="form-label">Código</label>
                        <input type="text" class="form-control" id="txtProjectCode" placeholder="PS-XXX-XX" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtClassificationType" class="form-label">Clasificación</label>
                        <input type="text" class="form-control" id="txtClassificationType" placeholder="" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtClassificationArea" class="form-label">Área</label>
                        <input type="text" class="form-control" id="txtClassificationArea" placeholder="" autocomplete="off">
                    </div>
                </div>

                <div class="row mt-2">

                    <div class="col-12">
                        <div id="errorMessage" class="alert alert-danger" role="alert">
                            A simple danger alert-check it out!
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="SaveProjectClassification()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@*Implementing AJAX method to view the BBDD project classification in the presentation layer*@

@section scripts{

    <script>

        var tableData;
        var rowSelected;

        $(document).ready(function () {

            tableData = $("#table").DataTable({

                responsive: true,
                ordering: false,
                dom: 'lBfrtip',
                buttons: [
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fas fa-file-pdf"></i>',
                        titleAttr: 'Exportar a PDF',
                        className: 'btn btn-margin btn-colorPdf',
                        orientation: 'landscape',
                        attr: {
                            id: 'btnPdf' // Agrega el ID 'btnPdf' al botón de PDF
                        }
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel"></i>',
                        titleAttr: 'Exportar a Excel',
                        className: 'btn btn-margin btn-colorExcel',
                        attr: {
                            id: 'btnExcel' // Agrega el ID 'btnExcel' al botón de Excel
                        }
                    }
                ],
                buttonContainer: '<div class="btn-group"></div>',
                "ajax": {

                    url:'@Url.Action("ProjectClassificationList", "Home")', /*retorna la url*/
                    type: "GET",
                    dataType: "json"

                },
                "columns": [

                    { "data": "projectCode" },
                    { "data": "classificationType" },
                    { "data": "classificationArea" },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            var userRole = '@ViewBag.UserRole';

                            if (userRole === "Consulta" || userRole === "Registra") {
                                // Si el rol es "Consulta" o "Registra", deshabilita los botones
                                return '<button type="button" class="btn btn-primary btn-sm btn-edit" disabled><i class="fas fa-pen"></i></button>';

                            } else {
                                // Si el rol no es "Consulta" ni "Registra", muestra los botones habilitados
                                return '<button type="button" class="btn btn-primary btn-sm btn-edit"><i class="fas fa-pen"></i></button>';

                            }
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "90px",
                    }

                ],
                "language": { "url": "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json"}
            });
            var btnMarginStyle = document.createElement('style');
            btnMarginStyle.innerHTML = '.btn-margin { margin-right: 5px; margin-left: 5px; }';
            document.head.appendChild(btnMarginStyle);

            var btnColorPdf = document.createElement('style');
            btnColorPdf.innerHTML = '.btn-colorPdf { background-color: #151240 } .btn-colorPdf:hover { background-color: #151240 }';
            document.head.appendChild(btnColorPdf);

            var btnColorExcel = document.createElement('style');
            btnColorExcel.innerHTML = '.btn-colorExcel { background-color: #151240 } .btn-colorExcel:hover { background-color: #151240 }';
            document.head.appendChild(btnColorExcel);

        });

        function OpenModal(json) {

            $("#txtID").val(0);
            $("#txtProjectCode").val("");
            $("#txtClassificationType").val("");
            $("#txtClassificationArea").val("");
            $("#errorMessage").hide();

            if (json != null) {

                $("#txtID").val(json.idProject);
                $("#txtProjectCode").val(json.projectCode);
                $("#txtClassificationType").val(json.classificationType);
                $("#txtClassificationArea").val(json.classificationArea);
            }

            $("#FormModal").modal("show");

        }

        /*a method to show projects classification on the modal to edit their info*/

        $("#table tbody").on("click", '.btn-edit', function () {

            rowSelected = $(this).closest("tr");

            var projectData = tableData.row(rowSelected).data();

            OpenModal(projectData)

        })

        function SaveProjectClassification() {

            var projectClassification = {

                idProject: $("#txtID").val(),
                projectCode: $("#txtProjectCode").val(),
                classificationType: $("#txtClassificationType").val(),
                classificationArea: $("#txtClassificationArea").val(),
            }

            jQuery.ajax({
                url: '@Url.Action("SaveProjectClassification", "Home")',
                type: "POST",
                data: JSON.stringify({ objProject: projectClassification}),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    $(".modal-body").LoadingOverlay("hide");

                    //When is a new project information
                    if (projectClassification.idProject == 0) {

                        if (data.result != 0) {

                            projectClassification.idProject = data.result;
                            tableData.row.add(projectClassification).draw(false);
                            $("#FormModal").modal("hide");
                        }
                        else {

                            $("#errorMessage").text(data.message);
                            $("#errorMessage").show();
                        }
                    }
                    //When update project location
                    else {

                        if (data.result) {

                            tableData.row(rowSelected).data(projectClassification).draw(false);
                            rowSelected = null;
                            $("#FormModal").modal("hide");
                        }
                        else {

                            $("#errorMessage").text(data.message);
                            $("#errorMessage").show();
                        }
                    }
                },
                error: function (error) {

                    $(".modal-body").LoadingOverlay("hide");
                    $("#errorMessage").text("Error Ajax");
                    $("#errorMessage").show();

                },//beforeSend allow to do something during the success case is executing
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    })
                }
            });
        }

        window.onload = function () {
        disableButtonsByUserRole('@ViewBag.UserRole');
        };

        function disableButtonsByUserRole(userRole) {
            // Desactivar los botones según el rol del usuario
            if (userRole === "Registra") {
                document.getElementById('btnPdf').disabled = true;
                document.getElementById('btnExcel').disabled = true;
            }
        }

    </script>

} 